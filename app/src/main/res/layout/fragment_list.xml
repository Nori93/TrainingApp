<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
<TextView
    android:text="EXERCISE LIST"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="2dip"
    android:paddingTop="6dip"
    android:textColor="#5d5d5d"
    android:textSize="20sp"
    android:textStyle="bold" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:text="Search"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_search"
    android:textSize="20dp"
    android:textColor="#000000"/>
    <Button
        android:background="@drawable/custom_button_press_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:text="CLEAR SEARCH"
        android:enabled="false"
        android:id="@+id/list_search_button" />

<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:id="@+id/list_listview">


</ListView>

<Button
    android:background="@drawable/custom_button_press_effect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:text="Add New Exercise"
    android:id="@+id/list_add_exercise" />

</LinearLayout>